{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "poolsim-web",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist/public",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev:client",
    "beforeBuildCommand": "pnpm run build:client"
  },
  "app": {
    "windows": [
      {
        "title": "pool",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
